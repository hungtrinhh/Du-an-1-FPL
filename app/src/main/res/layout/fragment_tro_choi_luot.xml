<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:companyApp="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.fragmentTroChoiLuot"
    android:background="#F5F5F5">

   <LinearLayout
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@drawable/background_container">

           <androidx.appcompat.widget.Toolbar
               android:id="@+id/toolbar_DanhMuc"
               android:layout_width="match_parent"
               android:layout_height="?attr/actionBarSize"
               companyApp:titleTextAppearance="@style/ActionBar.nameText">

               <ImageView
                   android:id="@+id/btn_backToDSGame"
                   android:layout_width="35dp"
                   android:layout_height="35dp"
                   android:src="@drawable/ic_baseline_arrow_back" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:text="Thông tin trò chơi"
                   android:textColor="@color/white"
                   android:textSize="23dp"
                   android:textStyle="bold" />
           </androidx.appcompat.widget.Toolbar>
       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">
           <ScrollView
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="0.9">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">
                   <ImageView
                       android:background="#fff"
                       android:padding="20dp"
                       android:layout_width="match_parent"
                       android:layout_height="200dp"
                       android:layout_marginBottom="15dp"
                       android:src="@drawable/ic_jumping" />
                   <LinearLayout
                       android:background="#fff"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="vertical"
                       android:layout_marginBottom="8dp">
                       <TextView
                           android:id="@+id/tv_nameGame_Luot"
                           android:padding="8dp"
                           android:paddingRight="20dp"
                           android:paddingLeft="20dp"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_marginBottom="8dp"
                           android:textSize="25dp"
                           android:textStyle="bold" />

                       <TextView
                           android:id="@+id/tv_cost_Luot"
                           android:padding="8dp"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:paddingRight="20dp"
                           android:paddingLeft="20dp"
                           android:layout_marginBottom="8dp"
                           android:textSize="20dp" />

                       <TextView
                           android:id="@+id/tv_detailGame_Luot"
                           android:padding="8dp"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:paddingRight="20dp"
                           android:paddingLeft="20dp"
                           android:layout_marginBottom="8dp"
                           android:textSize="22dp" />

                   </LinearLayout>
                   <LinearLayout
                       android:background="#fff"
                       android:padding="8dp"
                       android:paddingRight="20dp"
                       android:paddingLeft="20dp"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">
                       <TextView
                           android:textSize="24dp"
                           android:text="Số lượng:"
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:layout_gravity="center"
                           android:layout_height="wrap_content"/>
                       <LinearLayout
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:layout_height="wrap_content"
                           android:gravity="right|center"
                           android:background="@drawable/bg_count">
                           <ImageButton
                               android:id="@+id/btn_remove"
                               android:backgroundTint="#448AFF"
                               android:src="@drawable/ic_baseline_remove_24"
                               android:layout_width="0dp"
                               android:layout_weight="0.3"
                               android:layout_height="50dp"/>
                           <TextView
                               android:padding="5dp"
                               android:textSize="24dp"
                               android:id="@+id/tv_count"
                               android:layout_width="0dp"
                               android:layout_weight="0.4"
                               android:gravity="center"
                               android:layout_height="wrap_content"/>
                           <ImageButton
                               android:backgroundTint="#448AFF"
                               android:id="@+id/btn_add"
                               android:src="@drawable/ic_baseline_add_24"
                               android:layout_width="0dp"
                               android:layout_weight="0.3"
                               android:layout_height="50dp"/>
                       </LinearLayout>
                   </LinearLayout>
                   <LinearLayout
                       android:id="@+id/choose_voucher"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:paddingLeft="20dp"
                       android:paddingRight="20dp"
                       android:background="@drawable/bg_line">

                       <TextView
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:gravity="left"
                           android:layout_gravity="center"
                           android:text="YahhHome Voucher"
                           android:textSize="18sp"
                           android:textStyle="bold" />

                       <TextView
                           android:id="@+id/tv_voucherChoose"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:gravity="right|center"
                           android:text="Chọn voucher"
                           android:layout_gravity="center"
                           android:textSize="18sp" />

                       <ImageView
                           android:layout_width="30dp"
                           android:layout_height="30dp"
                           android:layout_gravity="center"
                           android:src="@drawable/ic_baseline_navigate_next_24" />
                   </LinearLayout>
               </LinearLayout>
           </ScrollView>
           <LinearLayout
               android:background="#E0F7FA"
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="0.2"
               android:gravity="bottom">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="0.1"
                   android:layout_marginLeft="10dp"
                   android:layout_marginRight="10dp"
                   android:layout_marginBottom="10dp">

                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:gravity="left"
                       android:layout_gravity="center"
                       android:text="Tổng tiền:"
                       android:textSize="20dp"  />

                   <TextView
                       android:id="@+id/tv_totalCost"
                       android:textStyle="bold"
                       android:textColor="#0D47A1"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:gravity="right"
                       android:layout_gravity="center"
                       android:text="0đ"
                       android:textSize="25dp" />
               </LinearLayout>
               <Button
                   android:id="@+id/btn_play"
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="0.1"
                   android:text="CHƠI"
                   android:textColor="#fff"
                   android:textSize="25dp"
                   android:textStyle="bold" />
           </LinearLayout>
       </LinearLayout>

   </LinearLayout>
</FrameLayout>