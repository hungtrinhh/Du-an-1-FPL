<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_login"
    android:orientation="vertical">
    <!--logo-->
    <LinearLayout
        android:id="@+id/layout_logoWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingRight="20dp"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/logo_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />
    </LinearLayout>
    <!--form dang nhap-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        android:paddingTop="30dp"
        android:gravity="center"
        android:orientation="vertical">
        <!--editText UserName-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"

            android:orientation="horizontal">

            <EditText
                android:id="@+id/edEmailLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/ic_mail_outline_24px"
                android:drawablePadding="10dp"
                android:hint="@string/app_name" />
        </LinearLayout>
        <!--editText Password-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edPasswordLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_lock_outline_24px"
                android:drawablePadding="10dp"
                android:hint="********"  android:textSize="15dp"
                android:textColor="@color/black"
                android:inputType="textPassword" />
        </LinearLayout>
        <!--    Button nho tai khoan va quan mat khau-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="20dp"
            android:orientation="horizontal">

            <Switch
                android:id="@+id/swRememberAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:switchPadding="3dp"
                android:paddingLeft="-3dp"
                android:text="@string/rememberAccount"
                android:textColor="@color/black"
                tools:ignore="UseSwitchCompatOrMaterialXml" />

            <TextView
                android:id="@+id/tvFogotPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:paddingRight="10dp"
                android:text="@string/fogotPassword"
                android:textColor="@color/black" />
        </LinearLayout>
        <!--Button dang nhap-->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="18dp"
            android:padding="8dp"
            android:background="@drawable/background_button"
            android:textColor="@color/white"
            android:layout_marginHorizontal="20dp"
            android:text="@string/Login"
            android:textAllCaps="false" />
        <!--chua co tai khoan, dang ky-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|center"
            android:paddingBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chưa có tài khoản? " />

            <TextView
                android:id="@+id/btnGotoregister"
                android:layout_width="wrap_content"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_height="wrap_content"
                android:text="Đăng ký" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>