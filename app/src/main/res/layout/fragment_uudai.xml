<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Fragment.fragment_Uudai">
        <androidx.appcompat.widget.SearchView
            android:layout_width="match_parent"
            android:maxWidth="100000dp"
            app:queryHint="Tìm kiếm ưu đãi"
            android:layout_height="wrap_content"/>
    <com.smarteist.autoimageslider.SliderView
        android:id="@+id/image_slider"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginHorizontal="13dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/conten_background"
        app:sliderAnimationDuration="600"
        app:sliderAutoCycleDirection="back_and_forth"
        app:sliderAutoCycleEnabled="true"
        app:sliderIndicatorAnimationDuration="600"
        app:sliderIndicatorGravity="center_horizontal|bottom"
        app:sliderIndicatorMargin="5dp"
        app:sliderIndicatorOrientation="horizontal"
        app:sliderIndicatorRadius="1.3dp"
        app:sliderIndicatorSelectedColor="@color/green_tea"
        app:sliderIndicatorUnselectedColor="@color/blue"
        app:sliderScrollTimeInSec="2"
        app:sliderStartAutoCycle="true" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginHorizontal="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="214dp"
            android:layout_height="wrap_content"
            android:text="Danh mục" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="Xem tất cả" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/blue" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginHorizontal="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="214dp"
            android:layout_height="wrap_content"
            android:text="Danh mục" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="Xem tất cả" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/blue" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginHorizontal="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="214dp"
            android:layout_height="wrap_content"
            android:text="Danh mục" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="Xem tất cả" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/blue" />
</LinearLayout>