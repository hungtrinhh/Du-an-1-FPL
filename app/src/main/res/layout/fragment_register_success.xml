<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView

        android:id="@+id/btn_CancelToLogin"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_baseline_close_24" />

   <LinearLayout
       android:layout_width="match_parent"
       android:orientation="vertical"
       android:gravity="center"
       android:paddingBottom="100dp"
       android:layout_height="match_parent">
       <pl.droidsonroids.gif.GifImageView
           android:id="@+id/gifSuccess"
           android:layout_width="wrap_content"
           android:layout_height="268dp"
           android:src="@drawable/gif_register_success"
         />

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:fontFamily="@font/poppins_semi_bold"
           android:gravity="center"
           android:text="Chúc mừng"
           android:textColor="@color/blue"
           android:textSize="22dp"
           android:textStyle="bold" />
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:fontFamily="@font/poppins_regular"
           android:text="Bạn đã đăng ký thành công"
           android:textColor="@color/black"
           />
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:fontFamily="@font/poppins_regular"
           android:text="Chuyển trang sau số dây, hoặc để nguyên như thé này"
           android:textColor="@color/black"
           />
   </LinearLayout>
</LinearLayout>